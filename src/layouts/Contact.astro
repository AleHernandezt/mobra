---
import Titulo from "../components/Titulo.astro";
import Btn from "../components/Btn.astro";
---

<div class="flex flex-col h-full px-40" id="Contact">
  <section
  class="pt-16 flex flex-col justify-start items-center relative rounded-lg bg-white mb-16 w-full hover:scale-105 transition duration-300 h-fit"


  >
    <div class="flex flex-row w-full justify-between items-center gap-10">
      <div class="px-4 flex flex-col items-start w-1/2 h-auto">
        <div class="flex flex-col w-full justify-start gap-8">
          <h2 class="text-2xl text-yellow-500 font-bold">Contact Us</h2>
          <h3 class="text-xl pb-12 text-black">
            Ya estoy cancau de los lorem Ya estoy cancau de los lorem Ya estoy
            cancau de los lorem Ya estoy
          </h3>
        </div>
        <div class="flex flex-col mt-8 w-full">
          <input
            type="text"
            class="w-full p-4 mb-4 border border-gray-300 rounded-lg"
            placeholder="Name"
          />
          <input
            type="email"
            class="w-full p-4 mb-4 border border-gray-300 rounded-lg"
            placeholder="Email"
          />
          <input
            type="tel"
            class="w-full p-4 mb-4 border border-gray-300 rounded-lg"
            placeholder="Phone"
          />
          <select
            class="w-full p-4 mb-4 border border-gray-300 rounded-lg text-gray-400 bg-white"
          >
            <option value="">Select a Service</option>
            <option value="servicio1">Servicio 1</option>
            <option value="servicio2">Servicio 2</option>
            <option value="servicio3">Servicio 3</option>
          </select>
        </div>
        <a
          href=""
          class="h-12 bg-yellow-400 text-black border-2 border-solid border-yellow-400 hover:bg-transparent hover:border-yellow-400 transition duration-300 ease-in-out py-1 px-8 rounded-none hover:scale-105 flex items-center justify-center w-full"
        >
          <p class="font-bold mr-2 gap-4">Send</p>
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
        <div class="flex flex-row justify-around w-full py-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            ><path
              fill="Black"
              d="m16.556 12.906l-.455.453s-1.083 1.076-4.038-1.862s-1.872-4.014-1.872-4.014l.286-.286c.707-.702.774-1.83.157-2.654L9.374 2.86C8.61 1.84 7.135 1.705 6.26 2.575l-1.57 1.56c-.433.432-.723.99-.688 1.61c.09 1.587.808 5 4.812 8.982c4.247 4.222 8.232 4.39 9.861 4.238c.516-.048.964-.31 1.325-.67l1.42-1.412c.96-.953.69-2.588-.538-3.255l-1.91-1.039c-.806-.437-1.787-.309-2.417.317"
            ></path></svg
          >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            ><g
              fill="none"
              stroke="Black"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              ><path
                d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
              ></path><path d="m3 7l9 6l9-6"></path></g
            ></svg
          >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            ><path
              fill="Black"
              d="m14.872 14.287l6.522 6.52a3 3 0 0 1-2.218 1.188L19 22H5a3 3 0 0 1-2.394-1.191l6.521-6.522l2.318 1.545l.116.066a1 1 0 0 0 .878 0l.116-.066zM2 9.535l5.429 3.62L2 18.585zm20 0v9.05l-5.43-5.43zm-9.56-7.433l.115.066l8.444 5.629l-8.999 6l-9-6l8.445-5.63a1 1 0 0 1 .994-.065z"
            ></path></svg
          >
        </div>
      </div>
      <div class="w-1/2 h-screen max-h-screen">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3618.010234141551!2d-69.27545638495876!3d10.074029299706083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e875d00476b8717%3A0x61e919423a04e885!2sCasa%20Ale!5e0!3m2!1ses-419!2sve!4v1728008456586!5m2!1ses-419!2sve"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class=""
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </section>
</div>

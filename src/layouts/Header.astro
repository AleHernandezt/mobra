---
import Btn from "../components/Btn.astro";
import Nav from "../components/Nav.astro";
---

<Nav />
<header
  class="px-20 h-screen flex flex-col justify-end items-start relative pb-14"
>
  <video
    class="absolute top-0 left-0 w-full h-full object-cover"
    autoplay
    loop
    muted
  >
    <source src="/vid1.mp4" type="video/mp4" />
  </video>
  <div class="z-10"></div>
  <div class="flex flex-col w-1/2 z-10 mt-auto">
    <h1 class="text-4xl">Car Detailing</h1>
    <p class="mb-4">
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Distinctio minus
      assumenda nostrum dolorum fuga eveniet, quasi dolor nulla vitae aut
      deserunt earum iusto in sunt corporis consequatur voluptate dolore
      voluptatem maxime odit?
    </p>
    <div class="flex justify-center gap-16">
      <a
        href=""
        class="h-12 bg-yellow-400 text-[#131614] border-2 border-solid border-yellow-400 hover:bg-[#131614] hover:border-yellow-400 hover:text-white transition duration-300 ease-in-out py-1 px-8 rounded-none hover:scale-105 flex items-center justify-center w-full"
      >
        <p class="font-bold mr-2 gap-4">Boton</p>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
      <a
        href=""
        class="h-12 bg-[#131614] border-2 border-solid border-yellow-400 hover:bg-yellow-500 hover:border-yellow-400 hover:text-[#131614] transition duration-300 ease-in-out py-1 px-8 rounded-none hover:scale-105 flex items-center justify-center w-full"
      >
        <p class="font-bold mr-2 gap-4">Boton</p>
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </div>
</header>

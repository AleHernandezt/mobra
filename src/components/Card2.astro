---
import Btn from './Btn.astro'
interface Props {
  image: string;
  title: string;
  subtitle: string;
  description: string;
  actionTitle: string;
  includes: string[];
  action: string;
}
const { image } = Astro.props;
const { title } = Astro.props;
const { subtitle } = Astro.props;
const { description } = Astro.props;
const { actionTitle } = Astro.props;
const { includes } = Astro.props;
const { action } = Astro.props;


---
<section class="p-4 pt-8 w-80 lg:w-96 bg-yellow-500 rounded-lg shadow-md hover:bg-white transition duration-500 ease-in-out scale-100 hover:scale-110">
  <div class="flex flex-row p-2 transition duration-500 ease-in-out items-center justify-center">
    <img src={Astro.props.image} alt="Imagen" class="w-10 h-10 object-cover" />
    <div class="ml-2">
      <h3 class="text-lg font-bold text-black">{title}</h3>
      <h4 class="text-sm text-black">{subtitle}</h4>
    </div>
    <a href="#" class="bg-white rounded-md py-1 px-2 text-yellow-500 hover:bg-yellow-500 hover:text-white transition duration-300 ease-in-out ml-2">Popular</a>
  </div>
  <p class="text-gray-500 p-2 py-4 transition duration-500 ease-in-out text-xs">{description}</p>
  <h3 class="text-4xl font-bold p-2 py-4 text-black transition duration-500 ease-in-out">{actionTitle}</h3>
  <h4 class="p-2  text-black transition duration-500 ease-in-out">What's includes</h4>
  <div class="flex flex-col p-2  transition duration-500 ease-in-out py-10">
    {includes.map((include, index) => (
      <div class="flex items-center">
        <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <p class="text-sm text-black">{include}</p>
      </div>
    ))}
  </div>
  <Btn class="mx-4 mb-4">{action}</Btn>
</section>
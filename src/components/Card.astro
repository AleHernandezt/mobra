---
import Btn from './Btn.astro'
interface Props {
  image: string;
  title: string;
  subtitle: string;
  description: string;
  actionTitle: string;
  includes: string[];
  action: string;
}

const { title } = Astro.props;
const { subtitle } = Astro.props;
const { description } = Astro.props;
const { actionTitle } = Astro.props;
const { includes } = Astro.props;
const { action } = Astro.props;


---
<section class=" p-4 pt-8 w-64 bg-white rounded-lg shadow-md hover:bg-yellow-500 transition duration-500 ease-in-out scale-100 hover:scale-110">
  <div class="flex flex-row p-2  transition duration-500 ease-in-out">
    <img src="{image}" alt="Imagen" class="w-10 h-10 object-cover" />
    <div class="ml-2">
      <h3 class="text-lg font-bold text-black">{title}</h3>
      <h4 class="text-sm text-black">{subtitle}</h4>
    </div>
  </div>
  <p class="text-gray-500 p-2 transition duration-500 ease-in-out">{description}</p>
  <h3 class="text-2xl font-bold p-2  text-black transition duration-500 ease-in-out">{actionTitle}</h3>
  <h4 class="text-lg p-2  text-black transition duration-500 ease-in-out">What's includes</h4>
  <div class="flex flex-col p-2  transition duration-500 ease-in-out">
    <p class="text-sm text-black">{includes[0]}</p>
    <p class="text-sm text-black">{includes[1]}</p>
    <p class="text-sm text-black">{includes[2]}</p>
    <p class="text-sm text-black">{includes[3]}</p>
  </div>
  <Btn class="mx-4 mb-4">{action}</Btn>
</section>